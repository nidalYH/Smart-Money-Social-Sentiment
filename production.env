# Smart Money Trading System - Production Configuration
# Copy this to .env for production deployment

# ===========================================
# API Keys (REQUIRED - Replace with actual keys)
# ===========================================

# Etherscan API
ETHERSCAN_API_KEY=YOUR_ACTUAL_ETHERSCAN_API_KEY

# CoinGecko API
COINGECKO_API_KEY=YOUR_ACTUAL_COINGECKO_API_KEY

# Twitter API v2
TWITTER_BEARER_TOKEN=YOUR_ACTUAL_TWITTER_BEARER_TOKEN

# Telegram Bot
TELEGRAM_BOT_TOKEN=YOUR_ACTUAL_TELEGRAM_BOT_TOKEN
TELEGRAM_CHAT_ID=YOUR_ACTUAL_TELEGRAM_CHAT_ID

# Discord Webhook
DISCORD_WEBHOOK_URL=YOUR_ACTUAL_DISCORD_WEBHOOK_URL

# ===========================================
# Database Configuration
# ===========================================

# SQLite (Default)
DATABASE_URL=sqlite:///./smartmoney.db

# Redis (Optional)
REDIS_URL=redis://localhost:6379

# ===========================================
# Application Settings
# ===========================================

# JWT Secret Key (CHANGE THIS!)
SECRET_KEY=your-production-secret-key-change-this-123456789
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Production Settings
DEBUG=false
LOG_LEVEL=WARNING

# ===========================================
# Trading Configuration
# ===========================================

# Demo Trading (Set to false for live trading)
DEMO_TRADING_MODE=true
INITIAL_DEMO_BALANCE=100000
TRADING_PLATFORM=tradingview

# Risk Management
MIN_WHALE_BALANCE=1000
MAX_WHALE_WALLETS=100
WHALE_TRACKING_INTERVAL=300

# Signal Settings
SIGNAL_CONFIDENCE_THRESHOLD=0.8
MAX_ALERTS_PER_HOUR=5
MIN_VOLUME_CHANGE_PERCENT=25

# Position Sizing (Conservative for production)
MAX_POSITION_SIZE_PERCENT=0.02  # 2% per trade
STOP_LOSS_PERCENT=0.03  # 3% stop loss
TAKE_PROFIT_MULTIPLIER=2.5  # 2.5:1 risk/reward
MAX_DAILY_TRADES=5

# ===========================================
# Social Sentiment Settings
# ===========================================

# Twitter Monitoring
TWITTER_MONITOR_KEYWORDS=BTC,ETH,SOL,ADA,DOT,MATIC,AVAX,NEAR,FTM,ONE
TWITTER_MONITOR_INTERVAL=600  # 10 minutes

# Telegram Channels
TELEGRAM_CHANNELS=binance,coinbase,cryptocom,bybit,okx

# ===========================================
# Alert Settings
# ===========================================

# Alert Channels
TELEGRAM_ALERTS_ENABLED=true
DISCORD_ALERTS_ENABLED=true
EMAIL_ALERTS_ENABLED=false
PUSH_NOTIFICATIONS_ENABLED=false

# Alert Thresholds (Higher for production)
ALERT_CONFIDENCE_THRESHOLD=0.85
ALERT_VOLUME_THRESHOLD=500000  # $500k minimum volume

# ===========================================
# Technical Analysis Settings
# ===========================================

# EMA Settings
EMA_SHORT_PERIOD=12
EMA_LONG_PERIOD=26

# RSI Settings
RSI_PERIOD=14
RSI_OVERBOUGHT=70
RSI_OVERSOLD=30

# MACD Settings
MACD_FAST_PERIOD=12
MACD_SLOW_PERIOD=26
MACD_SIGNAL_PERIOD=9

# ===========================================
# WebSocket Settings
# ===========================================

# WebSocket Configuration
WS_HEARTBEAT_INTERVAL=30
WS_MAX_CONNECTIONS=50
WS_MESSAGE_QUEUE_SIZE=500

# ===========================================
# Performance Settings
# ===========================================

# Background Task Intervals (Longer for production)
WHALE_MONITORING_INTERVAL=600  # 10 minutes
SENTIMENT_ANALYSIS_INTERVAL=600  # 10 minutes
SIGNAL_GENERATION_INTERVAL=7200  # 2 hours
ALERT_PROCESSING_INTERVAL=3600  # 1 hour

# Data Retention
MAX_TRADE_HISTORY=5000
MAX_SIGNAL_HISTORY=2500
MAX_WHALE_HISTORY=50000

# ===========================================
# Security Settings
# ===========================================

# Rate Limiting
RATE_LIMIT_REQUESTS=50
RATE_LIMIT_WINDOW=3600  # 1 hour

# CORS Settings
CORS_ORIGINS=https://yourdomain.com
CORS_CREDENTIALS=true

# ===========================================
# Monitoring & Logging
# ===========================================

# Logging Configuration
LOG_FORMAT=%(asctime)s - %(name)s - %(levelname)s - %(message)s
LOG_FILE=logs/smartmoney.log
LOG_MAX_SIZE=52428800  # 50MB
LOG_BACKUP_COUNT=10

# Performance Monitoring
ENABLE_METRICS=true
METRICS_INTERVAL=300  # 5 minutes

# ===========================================
# External Services
# ===========================================

# Price Data Sources
PRICE_DATA_SOURCE=coingecko
PRICE_UPDATE_INTERVAL=120  # 2 minutes

# News Sources
NEWS_SOURCES=coindesk,cointelegraph,decrypt
NEWS_UPDATE_INTERVAL=3600  # 1 hour

# ===========================================
# Production Settings
# ===========================================

# Production Mode
DEV_MODE=false
MOCK_DATA=false
FAST_STARTUP=false

# Testing
ENABLE_TEST_ENDPOINTS=false
TEST_MODE=false

# ===========================================
# Additional Production Settings
# ===========================================

# Server Configuration
HOST=0.0.0.0
PORT=8000
WORKERS=4

# Database Pool
DB_POOL_SIZE=20
DB_MAX_OVERFLOW=30

# Cache Settings
CACHE_TTL=300  # 5 minutes
CACHE_MAX_SIZE=1000

# Backup Settings
BACKUP_ENABLED=true
BACKUP_INTERVAL=86400  # 24 hours
BACKUP_RETENTION_DAYS=30
