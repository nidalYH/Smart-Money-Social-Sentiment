# Smart Money Social Sentiment Analyzer - Environment Configuration Template
# Copy this file to .env and fill in your actual values

# Database Configuration
DATABASE_URL=postgresql://user:password@localhost:5432/smart_money_db
# For SQLite (development): DATABASE_URL=sqlite:///./smart_money.db

# Application Settings
DEBUG=true
LOG_LEVEL=INFO
SECRET_KEY=your-secret-key-here

# Free API Keys (Required)
ETHERSCAN_API_KEY=your-etherscan-api-key-here
COINGECKO_API_KEY=optional-but-recommended-for-higher-limits
REDDIT_CLIENT_ID=your-reddit-client-id
REDDIT_CLIENT_SECRET=your-reddit-client-secret
REDDIT_USER_AGENT=SmartMoneyBot/1.0

# Trading System Configuration
AUTO_START_TRADING=false
INITIAL_DEMO_BALANCE=100000.0
MAX_POSITIONS=10
MIN_SIGNAL_CONFIDENCE=0.7
MAX_RISK_PER_TRADE=0.03
SIGNAL_COOLDOWN_MINUTES=30
PORTFOLIO_UPDATE_INTERVAL=60

# Trading Watchlist (comma-separated symbols)
TRADING_WATCHLIST=BTC,ETH,ADA,SOL,MATIC,LINK,UNI,AVAX,DOT,ALGO

# Alert System Configuration
# Telegram Bot
TELEGRAM_BOT_TOKEN=your-telegram-bot-token-here
TELEGRAM_CHAT_ID=your-telegram-chat-id-here
TELEGRAM_ALERTS_ENABLED=false

# Discord Webhook (Optional)
DISCORD_WEBHOOK_URL=your-discord-webhook-url-here
DISCORD_ALERTS_ENABLED=false

# Email Alerts (Optional)
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
EMAIL_ADDRESS=your-email@gmail.com
EMAIL_PASSWORD=your-app-password-here
EMAIL_ALERTS_ENABLED=false

# Rate Limiting Configuration
REDDIT_REQUESTS_PER_MINUTE=60
ETHERSCAN_REQUESTS_PER_SECOND=5
COINGECKO_REQUESTS_PER_MINUTE=50
GOOGLE_TRENDS_REQUESTS_PER_HOUR=100

# WebSocket Configuration
WS_MAX_CONNECTIONS=100
WS_HEARTBEAT_INTERVAL=30

# Frontend Configuration
FRONTEND_URL=http://localhost:3000
CORS_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# Redis Configuration (Optional for caching)
REDIS_URL=redis://localhost:6379/0

# Performance Monitoring
ENABLE_METRICS=true
METRICS_PORT=8081

# Logging Configuration
LOG_TO_FILE=true
LOG_FILE_PATH=./logs/smart_money.log
LOG_ROTATION_SIZE=10MB
LOG_RETENTION_DAYS=30

# Development/Testing
MOCK_TRADING=true  # Set to false for real trading (not implemented yet)
PAPER_TRADING=true
ENABLE_DEBUG_ROUTES=true